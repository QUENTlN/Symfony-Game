{% extends 'base.html.twig' %}

{% block title %}Suggérer une question{% endblock %}

{% block body %}
    <main class="page contact-page">
        <section class="portfolio-block contact">
            <div class="container">
                <div class="heading">
                    <h2>Proposer une question</h2>
                </div>
                <form>
                    <div class="form-group text-center">
                        <div class="btn-group" role="group"><button class="btn btn-primary" type="button">&nbsp; &nbsp; &nbsp;Quiz&nbsp; &nbsp; &nbsp;</button><button class="btn btn-primary" type="button">Guess the</button></div>
                    </div>
                    <div class="form-group"><label for="name">Categorie</label><select class="form-control" id="category">
                            <optgroup label="This is a group">
                                <option value="12" selected="">This is item 1</option>
                                <option value="13">This is item 2</option>
                                <option value="14">This is item 3</option>
                            </optgroup>
                        </select></div>
                    <div class="form-group"><label for="subject">Question</label><input class="form-control item" type="text" id="subject"></div>
                    <div class="form-group"><label for="file">Image</label><input type="file" id="file" class="col-12"></div>
                    <div class="form-group"><label for="email">Réponse</label><input class="form-control item" type="email" id="answer"></div>
                    <div class="form-group text-center"><button class="btn btn-primary mb-3" type="button">Ajouter une réponse possible</button></div>
                    <div class="form-group"><button class="btn btn-primary btn-block btn-lg" type="submit">Envoyer</button></div>
                </form>
            </div>
        </section>
    </main>
    {% include 'fragments/footer.html.twig' %}
{% endblock %}

