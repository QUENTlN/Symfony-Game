{% extends 'base.html.twig' %}

{% block title %}
    {% trans %}Changement de mot de passe{% endtrans %}
{% endblock %}

{% block body %}
    <div class="login-dark">
        {{ form_start(form,{'attr':{'class':'gradient','style': 'margin-top: 5vh;'}}) }}
        {{ form_row(form._token) }}
        <h2 class="sr-only">Login Form</h2>
        <div class="illustration"><i class="icon ion-android-mail"></i></div>
        {% for error in form.vars['errors'] %}
            <div class="alert alert-danger" role="alert">
                <span class="fa fa-exclamation-circle" aria-hidden="true"></span>
                {{ error.message | striptags }}
            </div>
        {% endfor %}
        <div class="form-group"><label for="email">{% trans %}Mot de passe{% endtrans %}</label>{{ form_row(form.oldPassword, {'label':false, 'attr':{'class':'form-control form'}}) }}</div>
        <div class="form-group"><label for="email">{% trans %}Nouveau mot de passe{% endtrans %}</label>{{ form_row(form.newPassword.first) }}</div>
        <div class="form-group"><label for="email">{% trans %}Confirmer nouveau mot de passe{% endtrans %}</label>{{ form_row(form.newPassword.second)}}</div>
        <div class="form-group"><button class="btn btn-primary btn-block" type="submit">{% trans %}Modifier le mot de passe{% endtrans %}</button></div><a class="forgot" href="{{ path('account') }}">{% trans %}Annuler{% endtrans %}</a></form>
    </div>
        {{ form_end(form) }}
{% endblock %}